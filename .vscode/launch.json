{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Run current .ts with ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "build",
            "runtimeExecutable": "ts-node",
            "program": "${file}",
            "console": "integratedTerminal"

        }
    ]
}